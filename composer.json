{
	"name": "avisota/contao-core",
	"description": "Avisota newslettersystem for contao",
	"keywords": ["avisota", "email", "mail", "newsletter", "marketing"],
	"type": "contao-module",
	"homepage": "http://avisota.org",
	"license": "LGPL-3.0+",
	"authors": [
		{
			"name": "Tristan Lins",
			"email": "tristan.lins@bit3.de",
			"homepage": "http://bit3.de",
			"role": "Developer"
		}
	],
	"support": {
		"email": "support@avisota.de",
		"issues": "https://avisota.atlassian.net/browse/CC",
		"forum": "https://community.contao.org/de/forumdisplay.php?121-Avisota",
		"wiki": "http://de.contaowiki.org/Kategorie:Avisota",
		"irc": "irc://irc.freenode.org/avisota",
		"source": "https://github.com/avisota/contao-core"
	},
	"require": {
		"php": ">=5.3",
		"contao-community-alliance/composer-installer": "~1.6",
		"contao/core": ">=2.11.11,<3.3",
		"avisota/core": "~1.1",
		"contao-community-alliance/backports-initialize-system": "~1.0",
		"contao-community-alliance/console": "~1.0",
		"contao-community-alliance/dc-general": "2.0.0-alpha3",
		"contao-community-alliance/dependency-container": "~1.5",
		"contao-community-alliance/event-dispatcher": "~1.1",
		"contao-community-alliance/events-cron": "*",
		"contao-community-alliance/events-create-options": "*",
		"menatwork/contao-multicolumnwizard": "~3.0",
		"bit3/contao-compat": "~1.3",
		"bit3/contao-doctrine-orm": ">=2.0.2,<3-dev",
		"bit3/contao-doctrine-orm-timestampable": "~2.0",
		"bit3/contao-nested-menu": "~1.0",
		"bit3/contao-twig": "~1.8",
		"bit3/contao-meta-palettes": "~1.6",
		"bit3/contao-logger": "~1.0",
		"bit3/php-string-builder": "~1.0",
		"symfony/http-foundation": "~2.3"
	},
	"require-dev": {
		"phpunit/phpunit": "3.7.*",
		"squizlabs/php_codesniffer": "1.*",
		"bit3/php-coding-standard": "~2.2"
	},
	"minimum-stability": "dev",
	"prefer-stable": true,
	"conflict": {
		"contao-legacy/avisota": "*",
		"contao-legacy/avisota2": "*"
	},
	"autoload": {
		"psr-0": {
			"Avisota\\Contao\\Core": "src/"
		}
	},
	"extra": {
		"contao": {
			"sources": {
				"module": "system/modules/avisota-core",
				"assets": "assets/avisota/core"
			},
			"transifex": {
				"project": "avisota-contao",
				"prefix": "contao-core-",
				"languages_cto": "module/languages",
				"languages_tx": ".tx"
			}
		},
		"branch-alias": {
			"dev-develop": "2.0.x-dev"
		}
	}
}
